@model List<WebApiClient.Models.Yazar>
@{
    ViewBag.Title = "Index";
}

<h2>Yazar Listesi</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-right">
            <a class="btn btn-warning">@ViewBag.message</a>
        </div>
        <div class="col-lg-12">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Status</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">
                                <h2>
                                    Yazar Listesi Boş
                                </h2>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var yazar in Model)
                        {
                            <tr>
                                <td>@yazar.Id</td>
                                <td>@yazar.Name</td>
                                <td>@yazar.Surname</td>
                                <td>@{
                                        var status = yazar.Status == true ? new[] { "btn-success", "Active" } : new[]{ "btn-warning", "Passive" };
                                    }
                                    <a class="btn @status[0]">@status[1]</a>
                                </td>

                              <td>
                                <a class="btn btn-primary">Edit</a>
                                <a class="btn btn-danger">Delete</a>
                              </td>

                          </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

